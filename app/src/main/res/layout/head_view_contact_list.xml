<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_contact"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_head_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_friend"/>
        <ImageView
            android:id="@+id/add_head_red_point"
            app:layout_constraintTop_toTopOf="@id/add_head_list"
            app:layout_constraintLeft_toLeftOf="@id/add_head_list"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/point_red"
            android:visibility="gone"/>
        <TextView
            android:text="申请好友"
            app:layout_constraintTop_toTopOf="@id/add_head_list"
            app:layout_constraintBottom_toBottomOf="@id/add_head_list"
            app:layout_constraintLeft_toRightOf="@id/add_head_list"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFF"/>
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#8A8A8A"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_contact"
        app:layout_constraintTop_toBottomOf="@id/add_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_chat_head_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/group_chat"/>
        <ImageView
            android:id="@+id/group_chat_red_point"
            app:layout_constraintTop_toTopOf="@id/group_chat_head_list"
            app:layout_constraintLeft_toLeftOf="@id/group_chat_head_list"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/point_red"
            android:visibility="gone"/>
        <TextView
            android:text="群聊"
            app:layout_constraintTop_toTopOf="@id/group_chat_head_list"
            app:layout_constraintBottom_toBottomOf="@id/group_chat_head_list"
            app:layout_constraintLeft_toRightOf="@id/group_chat_head_list"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>