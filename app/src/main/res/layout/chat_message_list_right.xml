<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/chat_content_list_icon"
        android:src="@drawable/head_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:src="@drawable/right"
        app:layout_constraintTop_toTopOf="@id/chat_content_list_icon"
        app:layout_constraintBottom_toBottomOf="@id/chat_content_list_icon"
        app:layout_constraintLeft_toRightOf="@id/chat_content_list_content"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/chat_content_list_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@id/chat_content_list_icon"
        app:layout_constraintRight_toLeftOf="@id/chat_content_list_icon"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="你好"
        android:textSize="16sp"
        android:maxWidth="240dp"
        android:background="@drawable/message_bg_right"
        android:textColor="#FFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>