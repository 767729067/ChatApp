<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.ChatActivity">
    <TextView
        android:id="@+id/tv_chat_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        tools:text="胡翔"
        android:textColor="#FFF"
        android:background="#10FFFFFF"
        android:textSize="16sp"/>
    <ListView
        android:id="@+id/lv_chat_content"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_name"
        app:layout_constraintBottom_toTopOf="@id/cl_chat_bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@null"
        android:stackFromBottom="true"
        android:listSelector="@android:color/transparent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chat_bottomLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="#15FFFFFF">
        <EditText
            android:id="@+id/ed_chat_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt_chat_send"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/et_login_bg"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/bt_chat_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ed_chat_input"
            app:layout_constraintRight_toRightOf="parent"
            android:text="发送"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>